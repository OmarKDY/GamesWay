<style>
    .header-section{
        position: relative !important;
        width:100%!important;
        background: #081624;
    }
    #sub-dropdown {
        font-size: small;
        background-color: black;
        display: none;
        position: absolute;
        border-radius: 4px;
        top: 100%;
        left: 0;
        opacity: 0;
        transition: opacity 0.2s ease-in-out;
        box-sizing: border-box;
        padding: 0px;
        width: 200px;
    }

    li:hover #sub-dropdown {
        display: block;
        opacity: 1; /* show the sub dropdown gradually with a delay */
    }

    ul:hover #sub-dropdown {
        display: grid;
    }

    .nav-link a:hover {
        color: #b01ba5;
    }
</style>
<body>
    <!-- Page Preloder -->
@*    <div id="preloder">
        <div class="loader"></div>
    </div>
*@
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5Z5VZ8MC"
                    height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
    <!-- Header section -->
    <header class="header-section">
        <div class="header-warp">
            <div class="header-bar-warp d-flex">
                <!-- site logo -->
@*                <a href="home.html" class="site-logo">
                    <img src="./img/logo.png" alt="">
                </a>*@
                <nav class="top-nav-area w-100">
                    <div class="user-panel" style="width: 100%;">
                        <partial name="_SelectLangaugePV" />
                        <partial name="_LoginPartial" />
                    </div>
                    <!-- Menu -->
                    <ul class="main-menu primary-menu">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:white;">@localizer["Games"]</a>
                        <ul id="sub-dropdown" class="navbar-nav">
                                <li class="nav-item"><a href="@Url.Action("GetGamesList","Home", new {pageNo = 1, categoryName = "Arcade And Puzzle Games" })"><span>Arcade And Puzzle Games</span></a></li>
                                <li class="nav-item"><a href="@Url.Action("GetGamesList","Home", new {pageNo = 1, categoryName = "Board Games" })"><span>Board Games</span></a></li>
                                <li class="nav-item"><a href="@Url.Action("GetGamesList","Home", new {pageNo = 1, categoryName = "Logic Games" })"><span>Logic Games</span></a></li>
                                <li class="nav-item"><a href="@Url.Action("GetGamesList","Home", new {pageNo = 1, categoryName = "Sport Games" })"><span>Sport Games</span></a></li>
                        </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">@localizer["About"]</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer section -->
    <footer style="padding-bottom:300px;""" class="footer-section">
        <div style="z-index:2;" class="container">
            <div class="footer-left-pic">
                <img src="~/img/footer-left-pic.png" alt="">
            </div>
            <div class="footer-right-pic">
                <img src="~/img/footer-right-pic.png" alt="">
            </div>
            <a href="#" class="footer-logo">
                <h4 style="font-weight:bold; color:white;">Games Way Portal</h4>
            </a>
            <div class="footer-social d-flex justify-content-center">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-instagram"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
            </div>
        </div>
    </footer>
    <!-- Footer section end -->
    <!--====== Javascripts & Jquery ======-->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.slicknav.min.js"></script>
    <script src="~/lib/jquery/dist/owl.carousel.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.sticky-sidebar.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.magnific-popup.min.js"></script>
    <script src="~/lib/jquery/dist/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
