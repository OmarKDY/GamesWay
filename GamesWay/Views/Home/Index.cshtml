@@media (max-width: 576px) {
  .hero-image {
    height: 17vh;
  }
}

@@media (min-width: 577px) and (max-width: 767px) {
  .hero-image {
    height: 30vh;
  }
}

@@media (min-width: 768px) and (max-width: 991px) {
  .hero-image {
    height: 41vh;
  }
}

@@media (min-width: 992px) and (max-width: 1199px) {
  .hero-image {
    height: 55vh;
  }
}

@@media (min-width: 1200px) {
  .hero-image {
    height: 72vh;
  }
}
	@@media only screen and (min-width:1200px) {
    .col-xl-3 {
    -ms-flex: 0 0 25%;
    flex: 0 0 25%;
    max-width: 24%;
    }
	}
</style>
<body>
	<!-- Hero section -->
	<div class="hero-image d-flex justify-content-center align-items-center">
		<img src="/img/slider-bg-1.jpg" alt="hero image">
	</div>
	<!-- Hero section end-->
	<!-- Blog section -->
	<section style="padding-bottom:200px;" class="blog-section spad">
		<div class="container">
			<div class="row">
				<div class="col-xl-12 col-lg-12 col-md-12">
					<div class="section-title text-white">
						<h2>@localizer["GamesT"]</h2>
					</div>
					<ul class="blog-filter">
					@foreach (var category in ViewBag.GamesCategory)
				        {
							<li class="col-xl-3 col-lg-3 col-md-6">
							<div class="blog-thumb">
							@{
							var fileName = string.Join(" ", category.Split()).Replace("\u00A0", " ");
							Console.WriteLine(fileName);
							}
							<img style="width:auto; height:auto;" src="/img/@(fileName).jpg" alt="@category">>
							</div>
							<a href="@Url.Action("GetGamesList", new { pageNo = 1, categoryName = category })" style="width:100%;">@category</a>
						</li>
				        }
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- Blog section end -->
	</body>